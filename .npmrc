# NPM Configuration for CI/CD Optimization

# Disable audit during install (saves time in CI)
audit=false

# Disable funding messages
fund=false

# Use prefer-offline to speed up installs
prefer-offline=true

# Increase fetch timeout for large packages (10 minutes)
fetch-timeout=600000

# Increase fetch retry settings
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Enable strict peer dependencies checking
legacy-peer-deps=false

# Progress bar disabled in CI (cleaner logs)
progress=false

# Engine strict to catch Node version issues early
engine-strict=true

# Prevent optional dependencies from failing the build
optional=true

# Increase max sockets for parallel downloads
maxsockets=10
